    <!--------------------resgistre form-------------->

	<div class="form_wrapper">
	<div class="form_inner">
	<div class="company_logo text-center">
	<a href=""><img src="{{assets}}images/logos/logo-index3.png" alt=""></a>
	</div>
	<div class="form_area">
	<div class="form_title">
	<h2 class="text-center">Register</h2>
	</div>
	<form action="" method="post">

  <div class="form-group">
    <label for="exampleInputEmail1">Firstname<span class="required">*</span></label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder=" Firstname" name="" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Lastname<span class="required">*</span></label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder=" lastname" name="" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password<span class="required">*</span></label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder=" password" name="" required>
  </div>
    <div class="form-group">
    <label for="exampleInputPassword1">Confrim Password<span class="required">*</span></label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confrim password" name="" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Email id<span class="required">*</span></label>
    <input type="text" class="form-control" id="exampleInputPassword1" placeholder=" Email id" name="" required>
  </div>
    <div class="form-group">
    <label for="exampleInputPassword1">Phone Number<span class="required">*</span></label>
    <input type="tel" class="form-control" id="exampleInputPassword1" placeholder="Phone Number" name="" required>
  </div>
    <div class="form-check">
	<input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">I have read and agree to <a href="http://" class="privacy">Privacy Policy</a></label>
  </div>
    <button type="submit" class="btn_submit">Continue</button>
  <div class="already_account">
  <h6>I Have Account? <a href="http://" class="login_style">Login</a></h6>
  </div>
</form>
	
	</div>
	</div>
	</div>

